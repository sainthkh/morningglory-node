<div class="posts col-md-8">
{{#each posts as |post key|}}
	{{>post_summary post}}
{{/each}}
	<div class="text-center">
		{{>pagination pagination}}
	</div>
</div>
<div class="sidebar col-md-4">
	<div class="newsletter row">
		<div class="text-center">
			<h3>Get FREE Updates</h3>
		</div>
		{% email_form "default" %}
	</div>
	<div class="products">
		<div class="product-title">
			<h3>Products</h3>
		</div>
		<div class="product-list">
			{% for p in products %}
			<div class="product row">
				<a href="{% url 'blog:product' p.slug %}">
				<div class="col-xs-4">
					<img src="{% uploads p.thumbnail %}" />
				</div>
				<div class="col-xs-8 product-name">
					{{ p.title }}
				</div>
				</a>
			</div>
			{% endfor %}
		</div>
	</div>
</div>
{% endblock %}